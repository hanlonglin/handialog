<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLittleBrown"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <!--头部-->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorLittleBlue"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@color/colorLittleBlue"
        android:padding="8dp"
        android:src="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:text="账号:"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/image_back"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/txt_passwd"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:text="密码:"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_id"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/txt_passwdconfirm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:text="确认密码:"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_passwd"
        tools:layout_editor_absoluteX="0dp" />
    <EditText
        android:id="@+id/ed_id"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:hint="请输入账号"
        android:textSize="14dp"
        android:textColorHint="@color/colorLittleBrown"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/txt_id"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/ed_passwd"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="1dp"
        android:hint="请输入密码"
        android:textSize="14dp"
        android:textColorHint="@color/colorLittleBrown"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/txt_id"
        app:layout_constraintTop_toBottomOf="@+id/ed_id"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/ed_passwdconfirm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="1dp"
        android:hint="请再次输入密码"
        android:textSize="14dp"
        android:textColorHint="@color/colorLittleBrown"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/txt_id"
        app:layout_constraintTop_toBottomOf="@+id/ed_passwd"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/image_ocrcode"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@color/colorBigBrown"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/ed_passwdconfirm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/ed_ocrcode"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:layout_margin="5dp"
        android:hint="请输入验证码"
        android:textSize="14dp"
        android:textColorHint="@color/colorLittleBrown"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/image_ocrcode"
        app:layout_constraintTop_toBottomOf="@+id/ed_passwdconfirm"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="注册"
        android:textSize="16dp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_ocrcode"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <!--底部-->
    <ImageView
        android:id="@+id/image_qq"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/qq"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="—————其他登陆方式—————"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/image_qq"
        android:gravity="center"/>
</android.support.constraint.ConstraintLayout>