<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/colorGreen"
        android:padding="10dp"
        android:src="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorGreen"
        android:gravity="center|left"
        android:text="课程详情"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/image_back"
        app:layout_constraintRight_toRightOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_course"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/qq"
        app:civ_border_color="@color/colorGreen"
        app:civ_border_width="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <TextView
        android:id="@+id/txt_cnamekey"
        style="@style/DetailTextStyle1"
        android:text="课  程  名："
        app:layout_constraintTop_toBottomOf="@+id/image_course" />

    <TextView
        android:id="@+id/txt_cnamevalue"
        style="@style/DetailTextStyle2"
        android:text="数学"
        app:layout_constraintLeft_toRightOf="@+id/txt_cnamekey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_course" />

    <TextView
        android:id="@+id/txt_gradekey"
        style="@style/DetailTextStyle1"
        android:text="年       级："
        app:layout_constraintTop_toBottomOf="@+id/txt_cnamekey" />

    <TextView
        android:id="@+id/txt_gradevalue"
        style="@style/DetailTextStyle2"
        android:text="1"
        app:layout_constraintLeft_toRightOf="@+id/txt_cnamekey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cnamevalue" />

    <TextView
        android:id="@+id/txt_maxNumkey"
        style="@style/DetailTextStyle1"
        android:text="课程人数："
        app:layout_constraintTop_toBottomOf="@+id/txt_gradekey" />

    <TextView
        android:id="@+id/txt_maxvalue"
        style="@style/DetailTextStyle2"
        android:text="10"
        app:layout_constraintLeft_toRightOf="@+id/txt_maxNumkey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_gradekey" />

    <TextView
        android:id="@+id/txt_numkey"
        style="@style/DetailTextStyle1"
        android:text="已招人数："
        app:layout_constraintTop_toBottomOf="@+id/txt_maxNumkey" />

    <TextView
        android:id="@+id/txt_numvalue"
        style="@style/DetailTextStyle2"
        android:layout_width="40dp"
        android:text="10"
        app:layout_constraintLeft_toRightOf="@+id/txt_numkey"
        app:layout_constraintTop_toBottomOf="@+id/txt_maxvalue" />

    <ImageView
        android:id="@+id/image_stulist"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/list"
        app:layout_constraintLeft_toRightOf="@+id/txt_numvalue"
        app:layout_constraintTop_toBottomOf="@+id/txt_maxvalue" />

    <TextView
        android:id="@+id/txt_teacherkey"
        style="@style/DetailTextStyle1"
        android:text="课程老师："
        app:layout_constraintTop_toBottomOf="@+id/txt_numkey" />

    <TextView
        android:id="@+id/txt_teachervalue"
        style="@style/DetailTextStyle2"
        android:text="韩龙林"
        app:layout_constraintLeft_toRightOf="@+id/txt_maxNumkey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_numvalue" />

    <TextView
        android:id="@+id/txt_descripkey"
        style="@style/DetailTextStyle1"
        android:text="备       注："
        app:layout_constraintTop_toBottomOf="@+id/txt_teacherkey" />

    <TextView
        android:id="@+id/txt_descripvalue"
        style="@style/DetailTextStyle2"
        android:text="名师出品，必是精品"
        app:layout_constraintLeft_toRightOf="@+id/txt_maxNumkey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_teachervalue" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:text="参加课程"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripkey" />

</android.support.constraint.ConstraintLayout>