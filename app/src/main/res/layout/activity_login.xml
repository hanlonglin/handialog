<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLittleBrown"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <!--头部-->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorLittleBlue"
        android:gravity="center"
        android:text="登陆"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@color/colorLittleBlue"
        android:padding="8dp"
        android:src="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:text="账号:"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/image_back"/>
    <TextView
        android:id="@+id/txt_passwd"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:text="密码:"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_id"/>
    <EditText
        android:id="@+id/ed_id"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:hint="请输入账号"
        android:textColorHint="@color/colorLittleBrown"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/txt_id"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/ed_passwd"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="1dp"
        android:hint="请输入密码"
        android:textColorHint="@color/colorLittleBrown"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/txt_id"
        app:layout_constraintTop_toBottomOf="@+id/ed_id"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="登陆"
        android:textSize="16dp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_passwd"/>
    <TextView
        android:id="@+id/txt_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="注册账号"
        android:textColor="@color/colorLittleBlue"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/txt_forget_passwd"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="忘记密码"
        android:textColor="@color/colorLittleBlue"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintRight_toRightOf="parent"/>

    <!--底部-->
    <ImageView
        android:id="@+id/image_qq"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/qq"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="—————其他登陆方式—————"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/image_qq"
        android:gravity="center"/>
</android.support.constraint.ConstraintLayout>